### see ./lib/kobject_uevent.c in the linux kernel source

cd /etc/hotplug
. ./hotplug.functions

DEBUG=yes
export DEBUG

################################################################################
case $ACTION in
add)
    # is this a drive or a partition (ignore partitions)
    if [ "$DEVTYPE" = "disk" ] ; then  ### not a partition
        ./mount-external-drive "$DEVNAME"
    fi
    ;;
remove)
    REMOVER=`echo /var/run/block/${DEVNAME}`
    if [ -x $REMOVER ]; then  ### for each partition, too
	$REMOVER disk-is-gone
    fi
    rm -f $REMOVER

    # if [ -x /usr/sbin/updfstab ]; then
    #     /usr/sbin/updfstab
    # fi

    ###WAGLE###
    if [ "$DEVTYPE" = "disk" ] ; then  ### not a partition
	/etc/init.d/S28shares_cleanup restart  ### rmdir stray mount points (etc?)
	/etc/init.d/samba.sh reread_config
	/etc/init.d/proftpd.sh reread_config
    fi
    ;;
*)
    debug_mesg USB $ACTION event not supported
    exit 1
    ;;

esac
